# OpenAI Configuration for Realtime API
OPENAI_API_KEY=your_openai_api_key_here

# Application Configuration
APP_HOST=localhost
APP_PORT=8000
DEBUG=True

# Knowledge Base Configuration
KNOWLEDGE_BASE_PATH=./knowledge_base

# Audio Configuration (optimized for OpenAI Realtime API)
AUDIO_SAMPLE_RATE=24000
AUDIO_CHANNELS=1
AUDIO_FORMAT=pcm16

# LLM Configuration
OPENAI_MODEL=gpt-4o-mini
MAX_TOKENS=500
TEMPERATURE=0.7

# OpenAI Realtime API Configuration
OPENAI_REALTIME_MODEL=gpt-4o-mini-realtime-preview
OPENAI_REALTIME_VOICE=alloy
OPENAI_REALTIME_TEMPERATURE=0.7
OPENAI_REALTIME_MAX_TOKENS=4096

# Voice Activity Detection Settings
VAD_THRESHOLD=0.5
VAD_PREFIX_PADDING_MS=300
VAD_SILENCE_DURATION_MS=500

# Prompt Caching Configuration (for cost/latency optimization)
ENABLE_PROMPT_CACHING=True
MIN_CACHE_TOKENS=1024

# Session Configuration
SESSION_TIMEOUT_MINUTES=30 